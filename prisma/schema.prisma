// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Customer {
  id        String    @id @default(cuid())
  firstName String
  lastName  String
  email     String
  address   String
  products  Product[]
  Review    Review[]
}

model Product {
  id          String     @id @default(cuid())
  name        String
  description String
  image       String
  price       Int
  customers   Customer[]
  Review      Review[]
}

model Review {
  id         String   @id @default(cuid())
  product    Product  @relation(fields: [productId], references: [id])
  productId  String
  customer   Customer @relation(fields: [customerId], references: [id])
  customerId String
  rating     Int
  text       String
}
